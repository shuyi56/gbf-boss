{
  "manifest_version": 2,

  "name": "GBF Boss",
  "description":
    "To get information about boss triggers from the raid screen and give warnings about incoming triggers",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://game.granbluefantasy.jp/*"],
      "css": ["mystyles.css", "bootstrap.min.css"],
      "js": [
        "popper.min.js",
        "jquery-3.2.1.js",
        "data.js",
        "myscript.js",
        "bootstrap.min.js"
      ],
      "web_accessible_resources": ["./icons/*"]
    }
  ],
  "permissions": ["<all_urls>", "tabs", "storage"]
}
